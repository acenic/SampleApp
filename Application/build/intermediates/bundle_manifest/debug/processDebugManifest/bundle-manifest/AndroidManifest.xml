<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mediarecorder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="28" />
    <!-- Min/target SDK versions (<uses-sdk>) managed by build.gradle -->
    <!-- This app records A/V content from camera and stores it to disk -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:fullBackupContent="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android.mediarecorder.AddAudioInVideo"
            android:label="Change audio in video"
            android:theme="@style/Base.V7.Theme.AppCompat.Light" />
        <activity
            android:name="com.example.android.mediarecorder.ZoomInZoomOut"
            android:label="Zoom In / Zoom Out Effect"
            android:theme="@style/Base.V7.Theme.AppCompat.Light" />
        <!--
             Since this sample records video from camera preview, locking the orientation to
            landscape. Landscape mode offers us more preview space with standard video aspect
            ratios (width > height)
        -->
        <activity
            android:name="com.example.android.mediarecorder.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.mediarecorder.VideoListActivity"
            android:theme="@style/Base.V7.Theme.AppCompat.Light" />
        <activity
            android:name="com.example.android.mediarecorder.ConvertImageToVideo"
            android:label="Convert Image to Video"
            android:theme="@style/Base.V7.Theme.AppCompat.Light" />
        <activity
            android:name="com.example.android.mediarecorder.SlowMotionEffect"
            android:label="Slow Motion Effect"
            android:theme="@style/Base.V7.Theme.AppCompat.Light" />
        <activity
            android:name="com.example.android.mediarecorder.FadeInEffectActivity"
            android:label="Fade in / out effect"
            android:theme="@style/Base.V7.Theme.AppCompat.Light" />
    </application>

</manifest>